# Airtable Gateway Configuration

# Service
SERVICE_NAME=airtable-gateway
SERVICE_VERSION=1.0.0
HOST=0.0.0.0
PORT=8002

# Airtable Configuration
# Get your token from https://airtable.com/create/tokens
# Use Personal Access Token (starts with 'pat') or legacy API Key (starts with 'key')
AIRTABLE_TOKEN=patYOUR_PERSONAL_ACCESS_TOKEN_HERE
AIRTABLE_RATE_LIMIT=5
AIRTABLE_TIMEOUT=30
AIRTABLE_RETRY_ATTEMPTS=3
AIRTABLE_RETRY_DELAY=1.0

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Security
INTERNAL_API_KEY=internal-api-key

# Logging
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=["*"]