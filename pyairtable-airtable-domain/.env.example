# Environment Configuration Example
# Copy this file to .env and configure with your values

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/pyairtable_dev
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_KEEPALIVE=true

# Airtable API Configuration
AIRTABLE_TOKEN=patewow2oXotOdgpz.c7e78f8a5d17f20dfcbe7d32736dd06f56916af7e1549d88ed8f6791a2eaf654
AIRTABLE_RATE_LIMIT=5
AIRTABLE_TIMEOUT=30
AIRTABLE_RETRY_ATTEMPTS=3
AIRTABLE_RETRY_DELAY=1.0
AIRTABLE_MAX_BATCH_SIZE=10
AIRTABLE_CACHE_TTL=3600

# Security Configuration
SECURITY_INTERNAL_API_KEY=your_internal_api_key_here
SECURITY_JWT_SECRET_KEY=your_jwt_secret_key_here
SECURITY_JWT_ALGORITHM=HS256
SECURITY_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
SECURITY_PASSWORD_MIN_LENGTH=8
SECURITY_BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Observability Configuration
OBSERVABILITY_LOG_LEVEL=INFO
OBSERVABILITY_LOG_FORMAT=json
OBSERVABILITY_ENABLE_METRICS=true
OBSERVABILITY_METRICS_PORT=9090
OBSERVABILITY_ENABLE_TRACING=false
OBSERVABILITY_JAEGER_ENDPOINT=http://localhost:14268/api/traces
OBSERVABILITY_HEALTH_CHECK_INTERVAL=30

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_ALWAYS_EAGER=false
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_TASK_ACKS_LATE=true
CELERY_WORKER_DISABLE_RATE_LIMITS=false

# Development/Testing Configuration
TEST_DATABASE_URL=sqlite+aiosqlite:///:memory:
TEST_REDIS_URL=redis://localhost:6379/15