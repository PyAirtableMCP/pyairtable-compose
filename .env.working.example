# ============================================================================
# PyAirtable Working Configuration
# ============================================================================
# Copy this file to .env and update with your actual values

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================================================
# API SECURITY
# ============================================================================
API_KEY=your-secure-api-key-here
REQUIRE_API_KEY=true
JWT_SECRET=your-very-secure-jwt-secret-key-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=24h

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_USER=pyairtable
POSTGRES_PASSWORD=secure-postgres-password
POSTGRES_DB=pyairtable

# ============================================================================
# REDIS CONFIGURATION  
# ============================================================================
REDIS_PASSWORD=secure-redis-password

# ============================================================================
# AIRTABLE INTEGRATION
# ============================================================================
AIRTABLE_TOKEN=your-airtable-personal-access-token
AIRTABLE_BASE=your-airtable-base-id

# ============================================================================
# AI SERVICES
# ============================================================================
GEMINI_API_KEY=your-gemini-api-key
THINKING_BUDGET=1000

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-API-Key
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# ============================================================================
# MONITORING (Optional)
# ============================================================================
GRAFANA_PASSWORD=admin

# ============================================================================
# NOTES
# ============================================================================
# 1. Generate secure passwords for POSTGRES_PASSWORD and REDIS_PASSWORD
# 2. JWT_SECRET should be at least 32 characters long
# 3. Get AIRTABLE_TOKEN from https://airtable.com/developers/web/guides/personal-access-tokens
# 4. Get GEMINI_API_KEY from Google AI Studio
# 5. Update CORS_ORIGINS to match your frontend URLs