{
  "name": "pyairtable-frontend-optimized",
  "version": "2.0.0",
  "private": true,
  "description": "Performance-optimized PyAirtable frontend application",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "cross-env ANALYZE=true npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lighthouse": "lighthouse http://localhost:3000 --output-path=./lighthouse-report.html --save-assets --view",
    "performance:audit": "npm run build && npm run lighthouse",
    "bundle:analyze": "npm run build:analyze",
    "optimize:images": "imagemin src/assets/images/**/*.{jpg,jpeg,png} --out-dir=public/images/optimized --plugin=imagemin-mozjpeg --plugin=imagemin-pngquant",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    
    "// UI Components and Styling": "",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@mui/material": "^5.15.0",
    "@mui/icons-material": "^5.15.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "clsx": "^2.0.0",
    "tailwindcss": "^3.3.6",
    
    "// State Management": "",
    "@reduxjs/toolkit": "^2.0.1",
    "react-redux": "^9.0.4",
    "zustand": "^4.4.7",
    
    "// Forms and Validation": "",
    "react-hook-form": "^7.48.2",
    "zod": "^3.22.4",
    "@hookform/resolvers": "^3.3.2",
    
    "// HTTP Client": "",
    "axios": "^1.6.2",
    "swr": "^2.2.4",
    "react-query": "^3.39.3",
    
    "// Utilities": "",
    "lodash-es": "^4.17.21",
    "date-fns": "^2.30.0",
    "classnames": "^2.3.2",
    "uuid": "^9.0.1",
    
    "// Performance Optimization": "",
    "react-window": "^1.8.8",
    "react-virtualized-auto-sizer": "^1.0.20",
    "react-intersection-observer": "^9.5.3",
    "use-debounce": "^10.0.0",
    
    "// PWA Support": "",
    "next-pwa": "^5.6.0",
    "workbox-webpack-plugin": "^7.0.0",
    
    "// Image Optimization": "",
    "next-optimized-images": "^2.6.2",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "imagemin-webp": "^7.0.0",
    
    "// Monitoring and Analytics": "",
    "@sentry/nextjs": "^7.81.1",
    "web-vitals": "^3.5.0",
    
    "// Security": "",
    "dompurify": "^3.0.5",
    "js-cookie": "^3.0.5"
  },
  "devDependencies": {
    "// TypeScript": "",
    "typescript": "^5.3.2",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/node": "^20.10.0",
    "@types/lodash-es": "^4.17.12",
    "@types/uuid": "^9.0.7",
    "@types/js-cookie": "^3.0.6",
    "@types/dompurify": "^3.0.5",
    
    "// Build Tools": "",
    "@next/bundle-analyzer": "^14.0.4",
    "cross-env": "^7.0.3",
    "compression-webpack-plugin": "^10.0.0",
    "webpack-bundle-analyzer": "^4.10.1",
    
    "// Linting and Formatting": "",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.4",
    "@typescript-eslint/parser": "^6.13.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "prettier": "^3.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    
    "// Testing": "",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    
    "// Performance Testing": "",
    "lighthouse": "^11.4.0",
    "lighthouse-ci": "^0.12.0",
    
    "// Git Hooks": "",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    
    "// CSS Processing": "",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    
    "// Image Optimization": "",
    "sharp": "^0.33.0",
    "imagemin-cli": "^7.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@components/(.*)$": "<rootDir>/src/components/$1",
      "^@utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@hooks/(.*)$": "<rootDir>/src/hooks/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{js,jsx,ts,tsx}"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@9.0.0"
}