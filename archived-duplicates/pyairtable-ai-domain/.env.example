# PyAirtable AI Domain Service Configuration

# Service Configuration
SERVICE_NAME=pyairtable-ai-domain
SERVICE_VERSION=1.0.0
PORT=8080
HOST=0.0.0.0
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/pyairtable_ai

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# LLM Provider API Keys
OPENAI_API_KEY=
OPENAI_ORGANIZATION=
OPENAI_BASE_URL=

ANTHROPIC_API_KEY=

GEMINI_API_KEY=AIzaSyCwAGazN5GMCu03ZYLFWWTkdLRKFQb-OxU
GEMINI_MODEL=gemini-2.0-flash-exp

AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2024-02-01

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434

# Model Configuration
DEFAULT_MODEL=gpt-4o-mini
MAX_TOKENS=4096
TEMPERATURE=0.7
THINKING_BUDGET=20000

# Cost Tracking
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD=100.0

# Token Limits
MAX_PROMPT_TOKENS=128000
MAX_COMPLETION_TOKENS=4096
TOKEN_BUFFER=1000

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
BATCH_SIZE=100

# Vector Database Configuration
VECTOR_DB_PROVIDER=qdrant

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=embeddings

# Pinecone
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=pyairtable-embeddings

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
WEAVIATE_CLASS_NAME=Document

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=embeddings

# Model Serving
MODEL_CACHE_SIZE=5
MODEL_CACHE_TTL=3600
ENABLE_MODEL_WARMING=true

# MCP Configuration
MCP_MODE=hybrid
MCP_TOOLS_ENABLED=airtable_list_bases,airtable_get_schema,airtable_list_records,airtable_get_record,airtable_create_records,airtable_update_records,airtable_delete_records,calculate,search,query_database,generate_embeddings,semantic_search,classify_text,summarize_text,extract_entities

# External Service URLs
AIRTABLE_GATEWAY_URL=http://localhost:8001
AUTH_SERVICE_URL=http://localhost:8002

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_TOKENS_PER_MINUTE=100000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Session Management
SESSION_TTL=3600
MAX_SESSION_HISTORY=100

# Response Caching
ENABLE_RESPONSE_CACHING=true
CACHE_TTL=300
CACHE_KEY_INCLUDE_USER=true

# Security
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
INTERNAL_API_KEY=

# Feature Flags
ENABLE_STREAMING=true
ENABLE_FUNCTION_CALLING=true
ENABLE_MULTI_MODAL=true
ENABLE_FINE_TUNING=false