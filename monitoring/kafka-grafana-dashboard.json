{
  "dashboard": {
    "id": null,
    "title": "PyAirtable Kafka Cluster",
    "tags": ["kafka", "pyairtable", "messaging"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "Kafka Cluster Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "count(up{job=\"kafka-exporter\"} == 1)",
            "refId": "A",
            "legendFormat": "Online Brokers"
          },
          {
            "expr": "count(kafka_topic_partitions)",
            "refId": "B", 
            "legendFormat": "Total Partitions"
          },
          {
            "expr": "count(group by (topic) (kafka_topic_partitions))",
            "refId": "C",
            "legendFormat": "Total Topics"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "displayMode": "list"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Broker Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"kafka-exporter\"}",
            "refId": "A",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "displayMode": "list"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [
              {"options": {"0": {"text": "Down", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "Up", "color": "green"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "PyAirtable Topic Message Rates",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(kafka_topic_partition_current_offset{topic=~\"pyairtable.*\"}[5m])",
            "refId": "A",
            "legendFormat": "{{topic}}"
          }
        ],
        "gridPos": {"h": 9, "w": 24, "x": 0, "y": 8},
        "yAxes": [
          {
            "label": "Messages/sec",
            "show": true,
            "min": 0
          },
          {
            "show": true
          }
        ],
        "xAxis": {
          "show": true
        },
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "max": true,
          "avg": true
        },
        "nullPointMode": "null",
        "steppedLine": false,
        "tooltip": {
          "shared": true,
          "sort": 2,
          "value_type": "individual"
        }
      },
      {
        "id": 4,
        "title": "Consumer Lag by Topic",
        "type": "graph",
        "targets": [
          {
            "expr": "kafka_consumer_lag_sum{topic=~\"pyairtable.*\"}",
            "refId": "A",
            "legendFormat": "{{topic}} - {{consumergroup}}"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 17},
        "yAxes": [
          {
            "label": "Lag (messages)",
            "show": true,
            "min": 0
          },
          {
            "show": true
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [10000],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "max"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "10s",
          "handler": 1,
          "name": "High Consumer Lag",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 5,
        "title": "Under Replicated Partitions",
        "type": "graph",
        "targets": [
          {
            "expr": "kafka_server_ReplicaManager_UnderReplicatedPartitions",
            "refId": "A",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 17},
        "yAxes": [
          {
            "label": "Partitions",
            "show": true,
            "min": 0
          },
          {
            "show": true
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "max"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "10s",
          "handler": 1,
          "name": "Under Replicated Partitions",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 6,
        "title": "Request Handler Idle Ratio",
        "type": "graph",
        "targets": [
          {
            "expr": "kafka_server_KafkaRequestHandlerPool_RequestHandlerAvgIdlePercent",
            "refId": "A",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 26},
        "yAxes": [
          {
            "label": "Idle Ratio",
            "show": true,
            "min": 0,
            "max": 1
          },
          {
            "show": true
          }
        ]
      },
      {
        "id": 7,
        "title": "Network Processor Idle Ratio", 
        "type": "graph",
        "targets": [
          {
            "expr": "kafka_server_SocketServer_NetworkProcessorAvgIdlePercent",
            "refId": "A",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 26},
        "yAxes": [
          {
            "label": "Idle Ratio",
            "show": true,
            "min": 0,
            "max": 1
          },
          {
            "show": true
          }
        ]
      },
      {
        "id": 8,
        "title": "Schema Registry Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(schema_registry_requests_total[5m])",
            "refId": "A",
            "legendFormat": "{{instance}} - {{method}}"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 35},
        "yAxes": [
          {
            "label": "Requests/sec",
            "show": true,
            "min": 0
          },
          {
            "show": true
          }
        ]
      },
      {
        "id": 9,
        "title": "Dead Letter Queue Message Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(kafka_topic_partition_current_offset{topic=\"pyairtable.dlq.events\"}[5m])",
            "refId": "A",
            "legendFormat": "DLQ Messages/sec"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 35},
        "yAxes": [
          {
            "label": "Messages/sec",
            "show": true,
            "min": 0
          },
          {
            "show": true
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [5],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "2m",
          "frequency": "10s",
          "handler": 1,
          "name": "High DLQ Message Rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 10,
        "title": "PyAirtable Event Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (topic) (rate(kafka_topic_partition_current_offset{topic=~\"pyairtable.*\"}[1h]))",
            "refId": "A",
            "legendFormat": "{{topic}}"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 44},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {"mode": "single"},
          "legend": {
            "displayMode": "list",
            "placement": "right"
          }
        }
      },
      {
        "id": 11,
        "title": "SAGA Transaction States",
        "type": "stat",
        "targets": [
          {
            "expr": "sum by (saga_state) (rate(kafka_topic_partition_current_offset{topic=\"pyairtable.saga.events\"}[5m]))",
            "refId": "A",
            "legendFormat": "{{saga_state}}"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 44},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "displayMode": "list"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "cluster",
          "type": "query",
          "query": "label_values(up{job=\"kafka-exporter\"}, cluster)",
          "refresh": 1,
          "includeAll": false,
          "multi": false
        },
        {
          "name": "instance",
          "type": "query", 
          "query": "label_values(up{job=\"kafka-exporter\", cluster=\"$cluster\"}, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "expr": "changes(kafka_server_app_info[5m]) > 0",
          "iconColor": "blue",
          "titleFormat": "Kafka Deployment",
          "textFormat": "Kafka broker {{instance}} restarted"
        }
      ]
    }
  }
}