# Enhanced test runner container for comprehensive testing
# Supports Python, Go, and Node.js testing frameworks
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    build-essential \
    ca-certificates \
    gnupg \
    lsb-release \
    postgresql-client \
    redis-tools \
    jq \
    wait-for-it \
    unzip \
    docker.io \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js and npm for frontend tests
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get install -y nodejs

# Install Go for Go service testing
ENV GO_VERSION=1.21.5
RUN wget https://go.dev/dl/go${GO_VERSION}.linux-amd64.tar.gz \
    && tar -C /usr/local -xzf go${GO_VERSION}.linux-amd64.tar.gz \
    && rm go${GO_VERSION}.linux-amd64.tar.gz

# Set Go environment
ENV PATH="/usr/local/go/bin:${PATH}"
ENV GOPATH="/go"
ENV PATH="${GOPATH}/bin:${PATH}"

# Install Playwright for E2E tests
RUN npx playwright install-deps \
    && npx playwright install chromium firefox webkit

# Set working directory
WORKDIR /app

# Install Python dependencies
COPY requirements.test.txt .
RUN pip install --no-cache-dir -r requirements.test.txt

# Install test-specific dependencies
RUN pip install \
    pytest==7.4.0 \
    pytest-asyncio==0.21.1 \
    pytest-cov==4.1.0 \
    pytest-html==3.2.0 \
    pytest-xdist==3.3.1 \
    pytest-mock==3.11.1 \
    pytest-benchmark==4.0.0 \
    pytest-timeout==2.1.0 \
    pytest-rerunfailures==12.0 \
    httpx==0.24.1 \
    asyncpg==0.28.0 \
    redis==4.6.0 \
    faker==19.3.0 \
    playwright==1.36.0 \
    locust==2.16.1 \
    docker==6.1.3 \
    testcontainers==3.7.1 \
    pact-python==2.2.1 \
    bandit==1.7.5 \
    safety==2.3.5 \
    semgrep==1.45.0

# Install Go testing tools
RUN go install github.com/golangci/golangci-lint/cmd/golangci-lint@latest \
    && go install github.com/fzipp/gocyclo/cmd/gocyclo@latest \
    && go install honnef.co/go/tools/cmd/staticcheck@latest

# Install additional Node.js testing tools
RUN npm install -g \
    jest \
    @playwright/test \
    cypress \
    eslint \
    prettier \
    typescript \
    ts-node \
    newman \
    artillery

# Copy test configuration
COPY pytest.ini .
COPY conftest.py .
COPY requirements.test.txt .

# Create directories for test reports and coverage
RUN mkdir -p /app/reports /app/coverage /app/screenshots

# Add test utilities
COPY utils/ ./utils/
COPY fixtures/ ./fixtures/

# Copy test scripts
COPY scripts/ ./scripts/
RUN chmod +x ./scripts/*.sh

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTEST_CURRENT_TEST=""
ENV COVERAGE_FILE=/app/reports/.coverage

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import sys; sys.exit(0)"

# Default command
CMD ["pytest", "-v", "--tb=short"]