{
  "coverage": {
    "python": {
      "source": ["src/", "python-services/"],
      "omit": [
        "*/tests/*",
        "*/test_*",
        "*/__pycache__/*",
        "*/venv/*",
        "*/site-packages/*",
        "*/migrations/*",
        "*/alembic/*",
        "*/.tox/*"
      ],
      "exclude_lines": [
        "pragma: no cover",
        "def __repr__",
        "if self.debug:",
        "if settings.DEBUG",
        "raise AssertionError",
        "raise NotImplementedError",
        "if 0:",
        "if __name__ == .__main__.:",
        "class .*\\bProtocol\\):",
        "@(abc\\.)?abstractmethod"
      ],
      "thresholds": {
        "global": 80,
        "per_service": 75,
        "critical_modules": 90
      },
      "critical_modules": [
        "auth",
        "security", 
        "payment",
        "data_validation"
      ],
      "reports": {
        "html": true,
        "xml": true,
        "json": true,
        "lcov": true,
        "console": true
      }
    },
    "go": {
      "source": ["./..."],
      "exclude": [
        "*/vendor/*",
        "*/test/*",
        "*_test.go",
        "*/mock/*",
        "*/testdata/*",
        "*/migrations/*"
      ],
      "thresholds": {
        "global": 80,
        "per_package": 75,
        "critical_packages": 90
      },
      "critical_packages": [
        "auth",
        "security",
        "middleware",
        "validation"
      ],
      "reports": {
        "html": true,
        "profile": true,
        "func": true,
        "console": true
      }
    },
    "javascript": {
      "collectCoverageFrom": [
        "src/**/*.{js,jsx,ts,tsx}",
        "!src/**/*.d.ts",
        "!src/**/*.test.{js,jsx,ts,tsx}",
        "!src/**/*.spec.{js,jsx,ts,tsx}",
        "!src/test-utils/**",
        "!src/mocks/**",
        "!src/**/index.{js,ts}",
        "!**/node_modules/**"
      ],
      "coverageThreshold": {
        "global": {
          "branches": 75,
          "functions": 80,
          "lines": 80,
          "statements": 80
        },
        "./src/components/": {
          "branches": 70,
          "functions": 75,
          "lines": 75,
          "statements": 75
        },
        "./src/utils/": {
          "branches": 85,
          "functions": 90,
          "lines": 90,
          "statements": 90
        }
      },
      "coverageReporters": [
        "html",
        "lcov",
        "json",
        "text",
        "text-summary"
      ]
    }
  },
  "badges": {
    "enabled": true,
    "colors": {
      "90-100": "brightgreen",
      "80-89": "green", 
      "70-79": "yellow",
      "50-69": "orange",
      "0-49": "red"
    }
  },
  "notifications": {
    "coverage_drop_threshold": 5,
    "notify_on": [
      "coverage_drop",
      "threshold_breach",
      "critical_module_failure"
    ]
  },
  "trends": {
    "track_history": true,
    "history_retention_days": 90,
    "generate_trend_reports": true
  }
}