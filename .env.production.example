# Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Domain Configuration
DOMAIN_NAME=your-domain.com
CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com

# Database Configuration
POSTGRES_USER=pyairtable
POSTGRES_DB=pyairtable

# Application Configuration
ENVIRONMENT=production
LOG_LEVEL=info
VERSION_TAG=latest
NODE_ENV=production

# Security Configuration
PASSWORD_MIN_LENGTH=12
PASSWORD_HASH_ROUNDS=14
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Performance Configuration
THINKING_BUDGET=10000
MAX_FILE_SIZE=10MB
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,csv,xlsx

# Monitoring Configuration
ENABLE_METRICS=true
SHOW_COST_TRACKING=true
ENABLE_DEBUG=false

# External Service Configuration
AIRTABLE_BASE=your-airtable-base-id

# CORS Configuration
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-API-Key,X-Request-ID
CORS_CREDENTIALS=false
CORS_MAX_AGE=86400

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=90
METRICS_BATCH_SIZE=100

# Workflow Configuration
DEFAULT_WORKFLOW_TIMEOUT=300
MAX_WORKFLOW_RETRIES=3
SCHEDULER_CHECK_INTERVAL=30

# SAGA Configuration
SAGA_TIMEOUT_SECONDS=3600
SAGA_RETRY_ATTEMPTS=3
SAGA_STEP_TIMEOUT_SECONDS=300

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=24h

# Feature Flags
REQUIRE_API_KEY=true
USE_REDIS_SESSIONS=true
USE_REDIS_EVENT_BUS=true