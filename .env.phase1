# Phase 1 Environment Configuration
# =================================

# Development Environment
ENVIRONMENT=development
NODE_ENV=development
LOG_LEVEL=debug

# Database Configuration
POSTGRES_DB=pyairtable
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_dev_password
DATABASE_URL=postgresql://postgres:postgres_dev_password@postgres:5432/pyairtable?sslmode=require

# Redis Configuration
REDIS_PASSWORD=redis_dev_password
REDIS_URL=redis://:redis_dev_password@redis:6379

# JWT Authentication
JWT_SECRET=CHANGE_ME_SECURE_JWT_SECRET
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=24h

# API Keys
API_KEY=development_api_key_12345
INTERNAL_API_KEY=internal_dev_api_key_67890
REQUIRE_API_KEY=true

# Airtable Configuration
AIRTABLE_TOKEN=YOUR_AIRTABLE_TOKEN_HERE
AIRTABLE_BASE=appVLUAubH5cFWhMV
AIRTABLE_PAT=YOUR_AIRTABLE_TOKEN_HERE

# Google Gemini API Configuration
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# Service URLs (for Docker Compose)
AUTH_SERVICE_URL=http://auth-service:8001
USER_SERVICE_URL=http://user-service:8002
AIRTABLE_GATEWAY_URL=http://airtable-gateway:8003

# Security Configuration
CORS_ORIGINS=*
PASSWORD_MIN_LENGTH=8
PASSWORD_HASH_ROUNDS=12

# Performance Settings
RATE_LIMIT_PER_MINUTE=100
CACHE_TTL_SECONDS=900

# Phase 1 Service Ports
API_GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8001
USER_SERVICE_PORT=8002
AIRTABLE_GATEWAY_PORT=8003

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_RETRIES=3

# Development Flags
ENABLE_DEBUG=true
SHOW_COST_TRACKING=false