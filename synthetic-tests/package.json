{
  "name": "pyairtable-synthetic-tests",
  "version": "1.0.0",
  "description": "On-demand synthetic testing system for PyAirtable",
  "scripts": {
    "test:smoke": "npx playwright test --config=config/playwright.config.js --grep=\"@smoke\"",
    "test:regression": "npx playwright test --config=config/playwright.config.js --grep=\"@regression\"",
    "test:full": "npx playwright test --config=config/playwright.config.js",
    "test:new-user": "npx playwright test --config=config/playwright.config.js tests/new-user-journey.spec.js",
    "test:data-ops": "npx playwright test --config=config/playwright.config.js tests/data-operations.spec.js",
    "test:ai-analysis": "npx playwright test --config=config/playwright.config.js tests/ai-analysis.spec.js",
    "test:collaboration": "npx playwright test --config=config/playwright.config.js tests/collaboration.spec.js",
    "test:error-recovery": "npx playwright test --config=config/playwright.config.js tests/error-recovery.spec.js",
    "install-deps": "npm install",
    "setup": "npx playwright install chromium firefox webkit"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "uuid": "^9.0.1",
    "axios": "^1.6.0",
    "moment": "^2.29.4",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}