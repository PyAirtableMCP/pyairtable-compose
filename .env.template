# PyAirtableMCP Environment Configuration Template
# ================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# =============================================================================
# EXTERNAL API CREDENTIALS (REQUIRED)
# =============================================================================

# Airtable API Credentials
AIRTABLE_TOKEN=your_airtable_personal_access_token_here
AIRTABLE_BASE=your_airtable_base_id_here

# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# INTERNAL SECURITY SECRETS (GENERATE NEW VALUES)
# =============================================================================

# Internal API Key for service-to-service communication (256-bit recommended)
# Generate with: openssl rand -hex 32
API_KEY=generate_new_256_bit_api_key

# JWT Secret for token signing (base64 encoded, 256-bit recommended)
# Generate with: openssl rand -base64 32
JWT_SECRET=generate_new_jwt_secret

# NextAuth Secret for authentication (256-bit recommended)
# Generate with: openssl rand -hex 32
NEXTAUTH_SECRET=generate_new_nextauth_secret

# Database passwords (use strong passwords)
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=generate_strong_postgres_password
REDIS_PASSWORD=generate_strong_redis_password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
NODE_ENV=development

# Database configuration
POSTGRES_DB=pyairtable
POSTGRES_USER=postgres

# Application settings
THINKING_BUDGET=20000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-API-Key,X-Requested-With
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400
MAX_FILE_SIZE=10MB
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,csv,xlsx,json,yaml

# Development features
ENABLE_DEBUG=true
ENABLE_METRICS=true
SHOW_COST_TRACKING=true

# Security settings (development - adjust for production)
REQUIRE_API_KEY=true
REQUIRE_HTTPS=false
PASSWORD_MIN_LENGTH=8
PASSWORD_HASH_ROUNDS=12
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=24h
SESSION_TIMEOUT=3600

# Service URLs (local development)
AIRTABLE_GATEWAY_URL=http://localhost:8002
MCP_SERVER_URL=http://localhost:8001
LLM_ORCHESTRATOR_URL=http://localhost:8003
API_GATEWAY_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Database connection strings (local development)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# Additional settings
USE_REDIS_SESSIONS=true
REDIS_SESSION_TIMEOUT=3600
ENABLE_AUDIT_LOGGING=true
ANALYTICS_RETENTION_DAYS=30
METRICS_BATCH_SIZE=100